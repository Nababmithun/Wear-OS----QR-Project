<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">18sp</item>
        <item name="android:background">@drawable/boxed_edittext</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColorHint">#DDDDDD</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorAccent">#131111</item>
        <item name="android:textColorPrimary">#131111</item>
        <item name="android:background">#131111</item>
        <item name="dialogCornerRadius">8dp</item>
    </style>

</resources>
